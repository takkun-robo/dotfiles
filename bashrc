# my bashrc file.

# aliases
alias ls='ls -F --color=auto'
alias ll='ls -alF'
alias la='ls -AF'
alias l='ls -CF'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias v='vim'
alias vd='vimdiff'

alias g='git'
alias ga='git add'
alias gs='git status'
alias gd='git diff'
alias gc='git commit'

alias reload='source ~/.bashrc'

